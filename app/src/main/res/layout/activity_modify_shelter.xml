<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".Modify_shelter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:src="@drawable/logo"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소중한 작은 것들"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:id="@+id/ajoin"
        >

        <!--비밀번호-->
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginLeft="40dp"
                android:text="비밀번호"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="normal"/>
            <EditText
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:background="@drawable/wbutton_round"
                android:padding="10dp"
                android:textColor="#000000"
                android:id="@+id/a_pw_text"
                />
        </LinearLayout>

        <!--전화번호-->
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginLeft="40dp"
                android:text="전화번호"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="normal"/>
            <EditText
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:background="@drawable/wbutton_round"
                android:padding="10dp"
                android:textColor="#000000"
                android:id="@+id/a_phone_text"
                />
        </LinearLayout>

        <!--보호소명-->
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginLeft="40dp"
                android:text="보호소명"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="normal"/>
            <EditText
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:background="@drawable/wbutton_round"
                android:padding="10dp"
                android:textColor="#000000"
                android:id="@+id/a_shelter_text"
                />
        </LinearLayout>

        <!--대표자명-->
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginLeft="40dp"
                android:text="대표자명"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="normal"/>
            <EditText
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:background="@drawable/wbutton_round"
                android:padding="10dp"
                android:textColor="#000000"
                android:id="@+id/a_director_text"
                />
        </LinearLayout>

        <!--주소-->
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginLeft="60dp"
                android:text="주소"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="normal"/>
            <Spinner
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:layout_marginRight="7dp"
                android:background="@drawable/wbutton_round"
                android:padding="10dp"
                android:textColor="#000000"
                android:id="@+id/a_address1_spinner">
            </Spinner>

            <Spinner
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:layout_marginRight="7dp"
                android:background="@drawable/wbutton_round"
                android:padding="10dp"
                android:textColor="#000000"
                android:id="@+id/a_address2_spinner">
            </Spinner>

            <Spinner
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:background="@drawable/wbutton_round"
                android:padding="10dp"
                android:textColor="#000000"
                android:id="@+id/a_address3_spinner">
            </Spinner>

        </LinearLayout>

        <Button
            android:id="@+id/btn_modify"
            android:layout_width="125dp"
            android:layout_height="52dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="50dp"
            android:background="@drawable/bbutton_round"
            android:text="수정완료"
            android:layout_gravity="center" />

    </LinearLayout>

</LinearLayout>